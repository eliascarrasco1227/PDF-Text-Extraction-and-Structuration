                        <form>nim-</form>
                        <gloss>grande-</gloss>
                    </unit>
                    <unit>
                        <form>a'qtaq</form>
                        <gloss>PL</gloss>
                    </unit>
                    <unit>
                        <form>yab'il,...</form>
                        <gloss>PL/DIM enfermedad</gloss>
                    </unit>
                </morpheme_analysis>
                <syntactic_analysis>
                    <unit>
                        <form>nima'q</form>
                        <gloss>SA</gloss>
                    </unit>
                </syntactic_analysis>
            </interlinear_gloss>
